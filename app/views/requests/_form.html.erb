<%= render 'layouts/errors', object: @request %>

<%= form_for @request do |f| %>
  <div class="form-group">
    <%= f.label :loan_number %>
    <%= f.text_field :loan_number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :borrower_name %>
    <%= f.text_field :borrower_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :reason, "Reason for rush" %>
    <%= f.text_area :reason, class: "form-control", rows: "10" %>
  </div>
  <%= f.submit class: "btn btn-default" %>
<% end %>
