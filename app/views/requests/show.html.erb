<%= content_for :title, "Rush request" %>

<%= content_for :menu do %>
  <ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'New Rush', new_request_path %></li>
    <li><%= link_to 'Rush Log', requests_path %></li>
  </ul>
<% end %>

<h1><%= @request.loan_number %> - <%= @request.borrower_name %></h1>

<h3>
  <%= @request.reason %>
</h3>

<p>
  <%= link_to "Edit", edit_request_path(@request) %>
</p>

<p>
  <%= link_to "Delete", request_path(@request),
                        data: {confirm: "Are you sure?"},
                        method: "delete" %>
</p>
